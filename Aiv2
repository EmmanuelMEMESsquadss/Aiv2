local Players = game:GetService("Players")
local TeleportService = game:GetService("TeleportService")
local HttpService = game:GetService("HttpService")
local CoreGui = game:GetService("CoreGui")

local Player = Players.LocalPlayer
local PlaceId = game.PlaceId
local UniverseId = nil -- Will be fetched

-- Settings
local AUTO_REFRESH_INTERVAL = 15
local ServerList = {}
local SelectedServer = nil
local AutoRefreshEnabled = true
local IsRefreshing = false
local LastError = ""

-- JSON Decode
local function DecodeJSON(jsonString)
    local success, result = pcall(function()
        return HttpService:JSONDecode(jsonString)
    end)
    return success and result or nil
end

-- Get Universe ID from Place ID (CRITICAL!)
local function GetUniverseId()
    -- Method 1: Try new API
    local methods = {
        function()
            local url = "https://apis.roproxy.com/universes/v1/places/" .. PlaceId .. "/universe"
            local data = game:HttpGet(url)
            local result = DecodeJSON(data)
            return result and result.universeId
        end,
        function()
            local url = "https://games.roproxy.com/v1/games/multiget-place-details?placeIds=" .. PlaceId
            local data = game:HttpGet(url)
            local result = DecodeJSON(data)
            return result and result[1] and result[1].universeId
        end,
        function()
            -- Fallback: Try using PlaceId directly (for root places)
            return PlaceId
        end
    }
    
    for i, method in ipairs(methods) do
        local success, result = pcall(method)
        if success and result then
            print("[Server Browser] Got Universe ID:", result, "using method", i)
            return result
        end
    end
    
    return PlaceId -- Last resort fallback
end

